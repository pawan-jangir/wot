<%- include('partials/header.ejs') %>

<!-- content start -->
<div class="main-content">
  <section class="section">
    <div class="section-body">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div
              class="card-header"
              style="height: 70px; background-color: #212529"
            >
              <div class="col-12">
                <h4 class="float-left">Contact Us</h4>
               
              </div>
            </div>

            <div class="card-body">
              <div class="row">
                <div class="col-12">
                  <div class="table-responsive p-2">
                    <table class="table table-bordered table-md">
                      <thead>
                        <tr>
                          <th>Name</th>
                          <th>Email</th>
                          <th>Phone</th>
                          <th>Message</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if(!contact[0]) { %>
                        <tr>
                          <td colspan="5">No Contact Found</td>
                        </tr>
                        <% } else { for(var i=0; i < contact.length; i++) { %>
                        <tr>
                          <td><%- contact[i].full_name %></td>
                          <td><%- contact[i].email %></td>
                          <td><%- contact[i].mobile_number %></td>
                          <td><%- contact[i].company_name %></td>
                          <td>
                            <i
                              class="btn btn-danger btn-lg fas fa-trash-alt"
                              onclick="deleteCategory('<%= contact[i]._id %>');"
                            ></i>
                          </td>
                        </tr>
                        <% } } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
<!-- Main Content -->

<%- include ('partials/footer.ejs') %>
<script>
  function deleteCategory(id) {
    if (confirm("Do you really want to delete this record")) {
      // DO POST
      $.ajax({
        type: "POST",
        contentType: "application/json",
        url: "/admin/contact/delete",
        data: JSON.stringify({
          id: id,
        }),
      })
        .done((res) => {
          if (res.error == true) {
            renderToast({ message: res.message, icon: "error" });
          } else {
            renderToast({ message: res.message, icon: "success" });
            setTimeout(() => {
              window.location.reload();
            }, 2000);
          }
        })
        .fail(function (xhr, status, error) {
          console.log(xhr.responseText);
        });
    }
  }
</script>
