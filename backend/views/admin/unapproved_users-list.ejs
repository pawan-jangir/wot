<%- include('partials/header.ejs') %>

<!-- content start -->
<div class="main-content">
  <section class="section">
    <div class="section-body">
      <!--  Users Start-->
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div
              class="card-header"
              style="height: 70px; background-color: #212529"
            >
              <div class="col-12">
                <h4 class="float-left">Unapproved Users</h4>
              </div>
            </div>

            <div class="card-body">
              <div class="row">
                <div class="col-12">
                  <div class="table-responsive p-2">
                    <table id="example" class="table table-bordered table-md">
                      <thead class="t-head">
                        <tr class="text-center">
                          <th>S.NO</th>
                          <!-- <th>Image</th> -->
                          <th>Name</th>
                          <th>Email</th>
                          <th>Mobile</th>
                        </tr>
                      </thead>

                      <tbody class="text-center" ]>
                        <% if(!record[0]) { %>
                        <tr>
                          <td colspan="100%">No Data</td>
                        </tr>
                        <% } else {%> <% record.forEach(function(record,index){ %>
                        <tr>
                          <td><%= index+1 %></td>
                          <!-- <td>
                            <% if(record.image) { %>
                              <img
                              alt="file"
                              src="/uploads/profile/<%= record.image %>"
                              height="50px"
                              width="50px"
                            />
                            <% } else{ %>
                              <img
                              alt="file"
                              src="/uploads/game_type/1676122296719.jpg"
                              height="50px"
                              width="50px"
                            />
                            <% }  %>
                          </td> -->

                          <td><%= record.name %></td>
                          <td><%= record.email %></td>
                          <td><a href="https://wa.me/<%= record.mobile_number %>" target="_blank"><%= record.mobile_number %></a></td>
                        </tr>
                        <% }); %> <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Users Ends -->
    </div>
  </section>
</div>
<%- include ('partials/footer.ejs') %>
<script>
  $(document).ready(function () {
    $("#example").DataTable();
  });
</script>